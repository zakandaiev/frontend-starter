{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": "airbnb-base",
  "ignorePatterns": [
    "**/build/**/*",
    "**/coverage/**/*",
    "**/docs/**/*",
    "**/dist/**/*",
    "**/dist-ssr/**/*",
    "**/node_modules/**/*"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // "camelcase": 0,
    "consistent-return": 0,
    // "global-require": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    // "import/no-unresolved": 0,
    // "linebreak-style": 0,
    "max-len": 0,
    "no-param-reassign": 0,
    // "no-promise-executor-return": 0,
    // "no-undef": 0,
    "no-unneeded-ternary": 0,
    // "no-unused-vars": 0,
    "no-use-before-define": 0
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@",
            "./src"
          ]
        ]
      }
    }
  }
}
